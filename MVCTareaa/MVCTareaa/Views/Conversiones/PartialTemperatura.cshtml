
@model MVCTareaa.Models.DatosConversiones


<h2>Conversiones de Temperaturas</h2>

@using (Html.BeginForm("Temperatura", "Conversiones", FormMethod.Post))
{

    @Html.TextBoxFor(x => x.CampoTexto)<br>


    @Html.Label("Seleccione la Conversion que desea")<br>


    <strong>De: </strong>

    @Html.DropDownListFor(x => x.ConvesionesTemperaturasFormaCorta1, new SelectList(new[] { "Celcius", "Kelvin", "Farenheit", }), "Seleccionar la conversion")<br>


    <strong>A: </strong>
    @Html.DropDownListFor(x => x.ConvesionesTemperaturasFormaCorta2, new SelectList(new[] { "Celcius", "Kelvin", "Farenheit" }), "Seleccionar la conversion")<br>


    <input type="submit" value="CALCULAR TEMPERATURA" class="btn btn-success">
}


